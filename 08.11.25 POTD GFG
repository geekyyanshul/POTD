class Solution {
    int n, m;
    int[][] mat;
    Integer[][][] dp;

    public int numberOfPath(int[][] mat, int k) {
        this.mat = mat;
        this.n = mat.length;
        this.m = mat[0].length;
        dp = new Integer[n][m][k + 1];
        return dfs(0, 0, k);
    }

    private int dfs(int i, int j, int coins) {
        // Out of bounds
        if (i >= n || j >= m || coins < 0) return 0;

        // Last cell
        if (i == n - 1 && j == m - 1)
            return (coins == mat[i][j]) ? 1 : 0;

        // Already computed
        if (dp[i][j][coins] != null) return dp[i][j][coins];

        // Recursive calls: move down or right
        int right = dfs(i, j + 1, coins - mat[i][j]);
        int down = dfs(i + 1, j, coins - mat[i][j]);

        return dp[i][j][coins] = right + down;
    }
}

